<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.rubensousa.previewseekbar.media3.PreviewTimeBar
        android:id="@+id/exo_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="4dp"
        app:scrubber_enabled_size="14dp"
        app:scrubber_disabled_size="10dp"
        app:preview_enabled="true"
        app:preview_auto_hide="true" />

    <androidx.media3.ui.DefaultTimeBar
        android:id="@+id/exo_progress_fallback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="4dp"
        android:visibility="gone" />

</FrameLayout>
